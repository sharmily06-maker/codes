package com.java;

import java.util.Scanner;
public class digit {
	public static void main(String[]args) {
		Scanner Scan=new Scanner(System.in);
	    System.out.println("Enter the number");
	    int a=Scan.nextInt();
	    int sum=0;
	    while(a>0) {
	    	int dig=a%10;
	    	sum=sum+dig;
	    	a=a/10;
	    }
         System.out.println(sum);     	
	} 

}
